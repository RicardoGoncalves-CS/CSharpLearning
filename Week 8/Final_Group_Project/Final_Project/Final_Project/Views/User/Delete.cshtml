@model Final_Project.Models.Spartan

@{
    ViewData["Title"] = "Delete";
}

@if (!User.IsInRole("Admin"))
{
    Context.Response.Redirect("/");
}

<div class="container-xxl page-header page-header-trainee-profile" style="background-color: #e23565; margin-bottom: 1em!important;">
    <div class="container text-center">
        <h1 class="text-white animated zoomIn mb-3">Delete: @Html.DisplayFor(model => model.UserName)</h1>
        <p class="lead text-white">Are you sure you want to delete this User?</p>
    </div>
</div>

<div>
<table class="table table table-bordered table-hover border-dark">
    <thead>
        <tr class ="table-danger border-dark">
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.UserName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.Id)
            </td>
        </tr>
    </tbody>
</table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>

</div>
