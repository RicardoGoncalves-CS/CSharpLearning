@model Final_Project.Models.PersonalTracker

@{
    ViewData["Title"] = "Details";
}

<div class="container-xxl page-header page-header-trainee-profile" style="background-color: #e23565; margin-bottom: 1em!important;">
    <div class="container text-center">
        <h1 class="text-white animated zoomIn mb-3">Tracker Details: @Html.DisplayFor(model => model.Title)</h1>
        @if (User.IsInRole("Admin"))
        {
            <p class="text-white">Spartan ID: @Html.DisplayFor(model => model.Spartan.Id)</p>
        }
    </div>
</div>

@if (!User.Identity.IsAuthenticated)
{
    Context.Response.Redirect("/");
}

<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="IndexTrainer" role="button" class="btn btn-dark">Back to all Trainee Tracker</a>
    }

    @if (User.IsInRole("Trainee"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" role="button" class="btn bg-main">Edit Details</a>
        <a asp-action="Index" role="button" class="btn btn-dark">Back to My Personal Tracker</a>
    }
    
    @if (User.IsInRole("Trainer"))
    {
        <a asp-action="EditTrainer" asp-route-id="@Model.Id" role="button" class="btn bg-main">Add Comments</a> 
        <a asp-action="IndexTrainer" role="button" class="btn btn-dark">Back to all Trainee Trackers</a>
    }
</div>

<div class="border details-container mt-1">
<div class="col-lg-12 mt-2">
    <div class="row gap-5 justify-content-center">
        <div class="card text-light bg-success mb-3" style="max-width: 18rem; min-height: 10rem;">
            <div class="card-header fw-bold fs-5">Start</div>
            <div class="card-body details-card">
                <p class="card-text">@Html.DisplayFor(model => model.StartSelfFeedback)</p>
            </div>
        </div>
        <div class="card text-light bg-danger mb-3" style="max-width: 18rem; min-height: 10rem;">
            <div class="card-header fw-bold fs-5">Stop</div>
                <div class="card-body details-card">
                <p class="card-text">@Html.DisplayFor(model => model.StopSelfFeedback)</p>
            </div>
        </div>
        <div class="card text-light bg-secondary mb-3" style="max-width: 18rem; min-height: 10rem;">
            <div class="card-header fw-bold fs-5">Continue</div>
                <div class="card-body details-card">
                <p class="card-text">@Html.DisplayFor(model => model.ContinueSelfFeedback)</p>
            </div>
        </div>
    </div>   
    <div class="row gap-5 justify-content-center">
        <div class="card bg-light mb-3" style="max-width: 18rem; min-height: 7rem;">
            <div class="card-header fw-bold fs-5">Technical Skills</div>
            <div class="card-body">
                <p class="card-text fs-3 text-center">@Html.DisplayFor(model => model.TechnicalSkills)</p>
            </div>
        </div>
        <div class="card bg-light mb-3" style="max-width: 18rem; min-height: 7rem;">
            <div class="card-header fw-bold fs-5">Consultant Skills</div>
            <div class="card-body">
                    <p class="card-text fs-3 text-center">@Html.DisplayFor(model => model.ConsultantSkills)</p>
            </div>
        </div>
    </div>
    <div class="row gap-5 justify-content-center">
            <div class="card bg-warning mb-3 w-100" style="max-width: 25rem; min-height: 10rem;">
            <div class="card-header fw-bold fs-5">Trainee Comments</div>
            <div class="card-body details-card">
                <p class="card-text">@Html.DisplayFor(model => model.CommentsSelfFeedback)</p>
            </div>
        </div>
        <div class="card bg-warning mb-3 w-100" style="max-width: 25rem; min-height: 10rem;">
            <div class="card-header fw-bold fs-5">Trainer Comments</div>
            <div class="card-body details-card">
                <p class="card-text">@Html.DisplayFor(model => model.TrainerComments)</p>
            </div>
        </div>
    </div>
</div>
</div>