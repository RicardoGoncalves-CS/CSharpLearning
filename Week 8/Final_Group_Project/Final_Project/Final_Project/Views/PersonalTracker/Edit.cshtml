@model Final_Project.Models.PersonalTracker

@{
    ViewData["Title"] = "Edit";
}

<div class="container-xxl page-header page-header-trainee-profile" style="background-color: #e23565; margin-bottom: 1em!important;">
    <div class="container text-center">
        <h1 class="text-white animated zoomIn mb-3">Edit Personal Tracker Details: @Html.DisplayFor(model => model.Title)</h1>
    </div>
</div>

@if(!User.Identity.IsAuthenticated)
{
    Context.Response.Redirect("/");
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label fw-bold fs-6"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StopSelfFeedback" class="control-label fw-bold"></label>
                <textarea asp-for="StopSelfFeedback" class="form-control"></textarea>
                <span asp-validation-for="StopSelfFeedback" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartSelfFeedback" class="control-label fw-bold"></label>
                <textarea asp-for="StartSelfFeedback" class="form-control"></textarea>
                <span asp-validation-for="StartSelfFeedback" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ContinueSelfFeedback" class="control-label fw-bold"></label>
                <textarea asp-for="ContinueSelfFeedback" class="form-control"></textarea>
                <span asp-validation-for="ContinueSelfFeedback" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CommentsSelfFeedback" class="control-label fw-bold"></label>
                <textarea asp-for="CommentsSelfFeedback" class="form-control"></textarea>
                <span asp-validation-for="CommentsSelfFeedback" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TechnicalSkills" class="control-label fw-bold"></label>
                <select asp-for="TechnicalSkills">
                    <option value="Unskilled">Unskilled</option>
                    <option value="Low Skilled">Low Skilled</option>
                    <option value="Partially Skilled">Partially Skilled</option>
                    <option value="Skilled">Skilled</option>
                </select>
            </div>
                <div class="form-group mb-3">
                <label asp-for="ConsultantSkills" class="control-label fw-bold"></label>
                    <select asp-for="ConsultantSkills">
                        <option value="Unskilled">Unskilled</option>
                        <option value="Low Skilled">Low Skilled</option>
                        <option value="Partially Skilled">Partially Skilled</option>
                        <option value="Skilled">Skilled</option>
                    </select>
                </div>

           @if (User.IsInRole("Admin")){
            <div class="form-group mb-3">
                <label asp-for="SpartanId" class="control-label"></label>
                <select asp-for="SpartanId" class="form-control" asp-items="ViewBag.SpartanId"></select>
                <span asp-validation-for="SpartanId" class="text-danger"></span>
            </div>
            }
            @if (User.IsInRole("Trainee")){
            <div class="form-group mb-3" style="display:none">
                <label asp-for="SpartanId" class="control-label"></label>
                <select asp-for="SpartanId" class="form-control" asp-items="ViewBag.SpartanId"></select>
                <span asp-validation-for="SpartanId" class="text-danger"></span>
            </div>
            }
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn bg-main" />
                <a asp-action="Index" role="button" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
